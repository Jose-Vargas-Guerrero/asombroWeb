---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro'
import Hero from '../components/Hero.astro'
import SobreNosotros from '../components/SobreNosotros.astro'
import AsombroCreativo from '../components/AsombroCreativo.astro'
import Marcas from '../components/Marcas.astro'
import Servicios from '../components/Servicios.astro'
---

<Layout title="Welcome to Astro.">
	<main>
		<Navbar/>
		<Hero/>
		<SobreNosotros/>
		<AsombroCreativo/>
		<Marcas/>
		<Servicios/>
	</main>
</Layout>

<style is="global">
	main{
		scroll-behavior: smooth
	}
</style>
