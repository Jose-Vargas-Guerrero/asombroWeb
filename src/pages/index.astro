import Contactenos from "../components/Contactenos.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
---

<Layout>
  <main class="overflow-hidden">
    <div class="container">
      <Navbar />
      <Hero />
      <SobreNosotros />
      <AsombroCreativo />
      <Marcas />
      <Servicios />
      <Contactenos />
      <Footer />
      <WhatsAppButton />
    </div>
  </main>
</Layout>

